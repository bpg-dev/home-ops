---
# yaml-language-server: $schema=https://kubernetes-schemas.pages.dev/external-secrets.io/externalsecret_v1.json
apiVersion: external-secrets.io/v1
kind: ExternalSecret
metadata:
  name: import-world
spec:
  secretStoreRef:
    kind: ClusterSecretStore
    name: onepassword
  target:
    name: import-world
    creationPolicy: Owner
  data:
    # Pre-signed HTTPS URL to your world ZIP in Garage.
    # Recommended: rotate/regenerate per import so no long-lived S3 credentials are required in-cluster.
    - secretKey: WORLD_ZIP_URL
      remoteRef:
        # 1Password item ID or item path (vault-specific). Replace before use.
        key: REPLACE_ME_OP_ITEM_ID
        # Field/property name inside the 1Password item. Replace before use.
        property: WORLD_ZIP_URL


