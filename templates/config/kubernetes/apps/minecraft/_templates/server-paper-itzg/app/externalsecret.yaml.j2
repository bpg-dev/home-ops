---
# yaml-language-server: $schema=https://kubernetes-schemas.pages.dev/external-secrets.io/externalsecret_v1.json
apiVersion: external-secrets.io/v1
kind: ExternalSecret
metadata:
  name: &name REPLACE_ME_SERVER
spec:
  secretStoreRef:
    kind: ClusterSecretStore
    name: onepassword
  target:
    name: *name
    creationPolicy: Owner
    template:
      engineVersion: v2
      data:
        # itzg chart expects this key when using minecraftServer.rcon.existingSecret
        rcon-password: "{{ .RCON_PASSWORD }}"
        # Optional: used by our mount-to-/config pattern (Paper global config override)
        # paper-global.yml: |
        #   # put your Paper global config here (or source it from 1Password as a file/field)
  data:
    - secretKey: RCON_PASSWORD
      remoteRef:
        # 1Password item ID or item path (vault-specific). Replace before use.
        key: REPLACE_ME_OP_ITEM_ID
        property: RCON_PASSWORD


